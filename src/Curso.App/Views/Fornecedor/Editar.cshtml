@model FornecedorViewModel

@{
    ViewData["Title"] = "Alterar Fornecedor";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Fornecedor" asp-antiforgery="true" method="post" asp-action="Edit">
<div class="row">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="col-md-6">
        <h4>Dados</h4>
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Documento" class="form-label"></label>
            <input asp-for="Documento" class="form-control" />
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TipoFornecedor" class="form-label"></label>
            <input asp-for="TipoFornecedor" class="form-control" />
            <span asp-validation-for="TipoFornecedor" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" asp-for="Ativo" class="form-check-input"/>
            <label asp-for="Ativo" class="form-check-label" value="true"></label>
            <span asp-validation-for="Ativo" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <button type="submit" class="col-md-12 mt-4 btn btn-block btn-primary">Salvar</button>
    </div>
</div>
</form>