@model IEnumerable<FornecedorViewModel>
@using Humanizer

@{
    ViewData["Title"] = "Fornecedores";
}

<h1>@ViewData["Title"]</h1>
<a class="btn btn-primary mb-4" asp-action="Criar">Novo</a>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Nome</th>
                    <th>Atualização</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fornecedor in Model)
                {
                    <tr>
                        <td>@fornecedor.Nome</td>
                        <td>@fornecedor.DataAtualizacao.Humanize(utcDate: false)</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-light" asp-action="Detalhes" asp-route-id="@fornecedor.Id"><i class="bi bi-search"></i></a>
                            <a class="btn btn-sm btn-light" asp-action="Editar" asp-route-id="@fornecedor.Id"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-sm btn-light" asp-action="Remover" asp-route-id="@fornecedor.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
